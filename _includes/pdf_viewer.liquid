{% if page.pdf_path %}
<div class="pdf-container">
  <h2>Project Report</h2>
  <div class="row">
    <div class="col-sm-12">
      <style>
        /* 모바일 환경 기본 설정 */
        .responsive-pdf {
          height: 600px;
          width: 100%;
        }
        
        /* 노트북/데스크톱 환경 (768px 이상) */
        @media (min-width: 768px) {
          .responsive-pdf {
            height: 800px;
          }
        }
        #pdf-viewer-wrapper {
          margin-bottom: 30px;
        }
      </style>
      <!-- PDF Viewer: Use iframe on mobile, object on desktop -->
      <div id="pdf-viewer-wrapper">
        <object id="pdf-object" data="{{ page.pdf_path | relative_url }}" type="application/pdf" class="responsive-pdf d-none d-md-block">
          <p>Your browser doesn't support embedded PDFs. Please <a href="{{ page.pdf_path | relative_url }}">click here to download the PDF</a>.</p>
        </object>
        <iframe id="pdf-iframe" src="https://docs.google.com/gview?url={{ page.pdf_path | absolute_url }}&embedded=true" class="responsive-pdf d-block d-md-none" frameborder="0"></iframe>
      </div>
    </div>
  </div>
  <!-- <div class="text-right mt-3">
    {% assign file_extension = "pdf" %}
    {% include download_button.liquid file_extension=file_extension file_path=page.pdf_path %}
  </div> -->
</div>
{% endif %}
